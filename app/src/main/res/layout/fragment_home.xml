<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <TextView
        android:id = "@+id/homepageTrending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trending Community Servers"
        android:textSize="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homepageTrending"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Trending Community 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/trendingCommunityTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Community 1"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/trendingCommunityDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityTitle1"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/memberCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityDescription1"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/joinButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memberCount1"
                        android:layout_marginTop="16dp"
                        android:text="Join"
                        android:backgroundTint="#F4C2C2"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Trending Community 2 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/trendingCommunityTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Community 2"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/trendingCommunityDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityTitle2"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/memberCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityDescription2"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/joinButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memberCount2"
                        android:layout_marginTop="16dp"
                        android:text="Join"
                        android:backgroundTint="#F4C2C2"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Trending Community 3 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/trendingCommunityTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Community 3"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/trendingCommunityDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityTitle3"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/memberCount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trendingCommunityDescription3"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/joinButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memberCount3"
                        android:layout_marginTop="16dp"
                        android:text="Join"
                        android:backgroundTint="#F4C2C2"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
